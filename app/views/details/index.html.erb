<h1>Listing details</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>

<% for detail in @details %>
  <tr>
    <td><%=h detail.title %></td>
    <td><%=h detail.content %></td>
    <td><%= link_to 'Show', listing_detail_path(@listing, detail) %></td>
    <td><%= link_to 'Edit', edit_listing_detail_path(@listing, detail) %></td>
    <td><%= link_to 'Destroy', [@listing, detail], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New detail', new_listing_detail_path(@listing) %>
