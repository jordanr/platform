<h1>Editing detail</h1>

<% form_for([@listing, @detail]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', [@listing, @detail] %> |
<%= link_to 'Back', listing_details_path(@listing) %>
